@model Car
<div class="container">
    <h3 class="mb-3">@ViewBag.Action</h3>
    <form class="mt-4 mb-4" asp-action="Edit" method="post">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group mb-3">
            <label class="form-label" asp-for="Name">Nome</label>
            <input class="form-control" asp-for="Name" />
        </div>

        <div class="form-group mb-3">
            <label class="form-label" asp-for="InitialMileage">Valor atual do odômetro</label>
            <input class="form-control" asp-for="InitialMileage" />
        </div>

        <div class="form-group mb-3">
            <label class="form-label" asp-for="Constant">Constante de cálculo</label>
            <input class="form-control" asp-for="Constant" />
        </div>

        <input type="hidden" asp-for="CarId" />

        <div class="form-group mb-3">
            <input type="submit" value="Submeter" class="btn btn-primary mr-3" />
            <a asp-action="Add" class="btn btn-secondary">Cancelar</a>
        </div>

    </form>

</div>

@model RegisterViewModel
@{
    ViewBag.Title = "Registrar";
}

<div class="container">

    <h3 class="mb-3">@ViewBag.Title</h3>

    <form class="mt-4 mb-4" asp-action="Register" method="post">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group mb-3">
            <label class="form-label" asp-for="Username">Nome de usuário</label>
            <input class="form-control" asp-for="Username" />
        </div>

        <div class="form-group mb-3">
            <label class="form-label" asp-for="Password">Senha</label>
            <input class="form-control" asp-for="Password" />
        </div>

        <div class="form-group mb-3">
            <label class="form-label" asp-for="ConfirmPassword">Confirmar senha</label>
            <input class="form-control" asp-for="ConfirmPassword" />
        </div>

        <div class="form-group mb-3">
            <input type="submit" value="Registrar" class="btn btn-primary mr-3" />
            <a asp-action="Register" class="btn btn-secondary">Cancelar</a>
        </div>

    </form>

</div>

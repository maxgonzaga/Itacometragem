@model Car

<div class="container">

    <h3 class="mb-3">Confirmar remoção</h3>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="card mb-4">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Carro: @Model.Name</li>
            <li class="list-group-item">Primeira quilometragem: @Model.InitialMileage</li>
        </ul>
    </div>

    <form asp-action="Delete" method="post" class="mb-4">
        <input type="hidden" asp-for="CarId" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-controller="Car" asp-action="List" class="btn btn-primary">Cancelar</a>
    </form>

</div>
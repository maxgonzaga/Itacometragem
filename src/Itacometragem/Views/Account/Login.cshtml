@model LoginViewModel
@{
    ViewBag.Title = "Entrar";
}


<div class="container">

    <h3 class="mb-3">@ViewBag.Title</h3>

    <form class="mt-4 mb-4" asp-action="Login" method="post" asp-route-returnUrl="@Model.ReturnUrl">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group mb-3">
            <label class="form-label" asp-for="Username">Nome de usuário</label>
            <input class="form-control" asp-for="Username" />
        </div>

        <div class="form-group mb-3">
            <label class="form-label" asp-for="Password">Senha</label>
            <input class="form-control" asp-for="Password" />
        </div>

        <div class="form-group mb-3">
            <input type="submit" value="Entrar" class="btn btn-primary mr-3" />
            <a asp-action="Login" class="btn btn-secondary">Cancelar</a>
        </div>

    </form>

</div>